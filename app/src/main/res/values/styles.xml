<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/colorInverse</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/padding_default</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:background">@color/colorInverse</item>
    </style>
</resources>